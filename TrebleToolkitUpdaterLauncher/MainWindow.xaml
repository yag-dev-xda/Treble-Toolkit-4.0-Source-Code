<Window x:Class="TrebleToolkitUpdaterLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrebleToolkitUpdaterLauncher"
        mc:Ignorable="d"
        Title="Treble Toolkit Launcher" Height="450" Width="800" Background="#FF1D1D1D" xmlns:m="clr-namespace:MultiLanguageMarkup" MinWidth="800" MinHeight="450">
    <Grid>
        <Label x:Name="status_lbl" Content="©2020 YAG-dev" Margin="10,0,10,10" VerticalAlignment="Bottom" FontSize="20" Height="40" FontFamily="/TrebleToolkitUpdaterLauncher;component/Fonts/#Bahnschrift Semibold" Foreground="#FFE4E4E4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Label Content="Welcome to Treble Toolkit Launcher" Margin="10,10,10,0" VerticalAlignment="Top" Height="180" Foreground="#FFE4E4E4" FontSize="32" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/TrebleToolkitUpdaterLauncher;component/Fonts/#Bahnschrift Semibold" />
        <Label Content="This will download the latest version of Treble Toolkit and launch it automatically." Margin="10,190,10,179" VerticalAlignment="Center" Height="50" Foreground="#FFE4E4E4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/TrebleToolkitUpdaterLauncher;component/Fonts/#Bahnschrift Semibold" />
        <Rectangle Fill="#FF343434" Height="50" Margin="10,0,0,124" Stroke="#FF402EA4" StrokeThickness="3" VerticalAlignment="Bottom" RadiusY="23.5" RadiusX="23.5" HorizontalAlignment="Left" Width="381" />
        <Border BorderThickness="1" Height="50" Margin="10,0,0,124" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="381">
            <Label Content="LAUNCH" Margin="9" Foreground="#FFE4E4E4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/TrebleToolkitUpdaterLauncher;component/Fonts/#Bahnschrift Semibold" />
        </Border>
        <Button Content="Button" Margin="10,0,0,124" VerticalAlignment="Bottom" Height="50" Background="#FFDDDDDD" Opacity="0" Click="Button_Click" HorizontalAlignment="Left" Width="381" />
        <Rectangle Fill="#FF343434" Height="50" Margin="0,0,10,124" Stroke="#FF402EA4" StrokeThickness="3" VerticalAlignment="Bottom" RadiusY="23.5" RadiusX="23.5" HorizontalAlignment="Right" Width="381" />
        <Border BorderThickness="1" Height="50" Margin="0,0,10,124" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="381">
            <Label Content="FORCE REINSTALL" HorizontalAlignment="Left" VerticalAlignment="Top" Width="361" Margin="9,9,0,0" Height="30" FontFamily="/TrebleToolkitUpdaterLauncher;component/Fonts/#Bahnschrift Semibold" Foreground="#FFE4E4E4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </Border>
        <Button Content="Button" Margin="0,0,10,124" VerticalAlignment="Bottom" Height="50" Background="#FFDDDDDD" Opacity="0" Click="Button_Click1" HorizontalAlignment="Right" Width="381" />
        <Rectangle Fill="#FF343434" Height="50" Margin="10,0,10,69" Stroke="#FF402EA4" StrokeThickness="3" VerticalAlignment="Bottom" RadiusY="23.5" RadiusX="23.5" />
        <Border BorderThickness="1" Height="50" Margin="10,0,10,69" VerticalAlignment="Bottom">
            <Label Content="LAUNCH WITHOUT UPDATING (OFFLINE)" VerticalAlignment="Top" Height="30" FontFamily="/TrebleToolkitUpdaterLauncher;component/Fonts/#Bahnschrift Semibold" Foreground="#FFE4E4E4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="9,9,9,0" />
        </Border>
        <Button Content="Button" Margin="10,0,10,69" VerticalAlignment="Bottom" Height="50" Background="#FFDDDDDD" Opacity="0" Click="Button_Click2" />

